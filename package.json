{
  "name": "project-spika-front-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "devserver:run": "concurrently --kill-others \"ng serve --proxy-config config/proxy.config.json\"",
    "build:spa:production": "ng build --prod --aot --output-path=dist/client",
    "build:doc": "compodoc -p tsconfig.json",
    "build:production": "npm run build:spa:production",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "bundle:report": "webpack-bundle-analyzer dist/client/stats.json",
    "test": "ng test --prod --code-coverage",
    "lint": "ng lint",
    "git:push": "git push --follow-tags",
    "deploy": "git pull && npm run build:production && npm run version:patch && npm run git:push && npm run build:doc",
    "version:patch": "npm version patch && git push --tags && npm run changelog",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.8",
    "@angular/common": "^6.1.8",
    "@angular/compiler": "^6.1.8",
    "@angular/core": "^6.1.8",
    "@angular/forms": "^6.1.8",
    "@angular/http": "^6.1.8",
    "@angular/platform-browser": "^6.1.8",
    "@angular/platform-browser-dynamic": "^6.1.8",
    "@angular/router": "^6.1.8",
    "@angular/cdk": "^6.1.8",
    "@nebular/auth": "^2.0.2",
    "@nebular/bootstrap": "^2.0.2",
    "@nebular/security": "^2.0.2",
    "@nebular/theme": "^2.0.2",
    "nebular-icons": "^1.1.0",
    "@compodoc/compodoc": "^1.1.5",
    "@ngx-translate/core": "^11.0.0",
    "@ngx-translate/http-loader": "^4.0.0",
    "conventional-changelog": "^2.0.3",
    "conventional-changelog-cli": "^2.0.5",
    "moment": "^2.22.2",
    "messageformat": "^2.0.4",
    "ngx-translate-messageformat-compiler": "^4.3.0",
    "core-js": "^2.5.7",
    "rxjs": "^6.3.3",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^6.1.8",
    "@angular-devkit/build-angular": "^0.6.8",
    "typescript": "^2.7.2",
    "concurrently": "^4.0.1",
    "@angular/cli": "^6.1.8",
    "@angular/language-service": "^6.1.8",
    "@types/jasmine": "^2.8.9",
    "@types/jasminewd2": "^2.0.5",
    "@types/node": "^10.12.1",
    "@types/moment": "^2.13.0",
    "codelyzer": "^4.5.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "jasmine-core": "^3.3.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "^5.4.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0"
  }
}
